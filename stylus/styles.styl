@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary

body
	background-color veryDarkBlue
	color paleBlue
	padding 0 10px

header
	background-color darkBlue
	border-radius 20px
	max-width 360px
	margin 0 auto

.profile
	background-color blue
	border-radius 20px
	padding 20px 0
	display flex
	align-items center
	justify-content center
	&__picture
		height 60px
		border 3px solid white
		border-radius 50%
	&__description
		margin-left 20px
		&__title
			margin 0
			font-size 1.5rem
		&__name
			margin 0
			color white

.timing
	display flex
	justify-content space-evenly
	align-items center
	height 50px
	&__button
		background-color transparent
		border none
		color paleBlue
		font-weight fwBold

.item
	border-radius 20px
	&__background
		display flex
		justify-content flex-end
		overflow hidden
		&__image
			margin-top -10px
			margin-right 10px
	&.work
		background-color lightOrange
	&.play
		background-color softBlue
	&__content
		position relative
		background-color darkBlue
		border-radius 20px
		margin-top -50px
		padding 20px
		&__title
			display flex
			align-items center
			justify-content space-between
			&__text
				color white
				font-weight fwBold
				margin 0